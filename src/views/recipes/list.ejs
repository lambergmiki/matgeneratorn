<main>
    <section class="recipe-section">
      <h2 class="">Din framslumpade veckosedel – voilà!</h2>

      <div class="column day-column">
          <div class="card">Mån</div>
          <div class="card">Tis</div>
          <div class="card">Ons</div>
          <div class="card">Tor</div>
          <div class="card">Fre</div>
          <div class="card">Lör</div>
          <div class="card">Sön</div>
        </div>

        <div class="column recipe-column">
            <% if (typeof recipes !== 'undefined') { %>
              <% recipes.forEach((recipe, index) => { %>
                <div class="card animate-me">
                  <div class="thumbnail">
                    <% if (recipe.picture) { %>
                    <img src="<%= recipe.picture %>" alt="Recipe thumbnail" />
                    <% } else { %>
                      <div class="no-image">No image available.</div>
                    <% } %>
                  </div>
                  <div class="card-content">
                    <p><%= recipe.title %></p>
                    <p>
                      <a href="<%= recipe.url %>" target="_blank">Se recept</a>
                    </p>
                  </div>
                    <button>Spara</button>
                </div>
              <% }) %>
            <% } else { %>
              <div class="placeholder-for-error-page">
                <p>placeholder-for-error-page</p>
              </div>
            <% } %>
        </div>
    </section>
    

    <section class="generator-section">
      
      <form action="<%= baseURL %>recipes" method="post">
        <button class="recipe-button">Ge mig recepten!</button>

      <section class="all-categories">
          <div class="category-protein">
              <h2>Protein</h2>
              <label><input type="checkbox" name="tag" value="tdb:6547" /> Kyckling</label><br/>
              <label><input type="checkbox" name="tag" value="tdb:6549" /> Fisk</label><br/>
              <label><input type="checkbox" name="tag" value="tdb:6594" /> Fläsk</label><br/>
              <label><input type="checkbox" name="tag" value="tdb:6600" /> Nöt</label>
          </div>
          <div class="category-veg">
              <h2>Veg</h2>
              <label><input type="checkbox" name="tag" value="tdb:6517" /> Veg</label>
          </div>
      </section>
      </form>
    </section>

  </main>
  <script type="module" src="<%= baseURL %>js/index.js"></script>